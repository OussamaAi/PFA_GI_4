@model PFA.ModelView.ModifierReservationChambreViewModel

@{
    ViewData["Title"] = "Modifier la réservation";
    Layout = "~/Views/Shared/_Client_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Modifier la réservation</h2>
            <form asp-action="EditerReservation" method="post" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="Date">Date de réservation</label>
                    <input type="datetime-local" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required>
                    <div class="invalid-feedback">
                        Veuillez fournir une date valide.
                    </div>
                </div>
                <div class="form-group">
                    <label>État de la réservation</label>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Etat" id="EtatConfirme" value="Confirmé" @(Model.Etat == "Confirmé" ? "checked" : "") required>
                            <label class="form-check-label" for="EtatConfirme">
                                Confirmé
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Etat" id="EtatAnnule" value="Annulé" @(Model.Etat == "Annulé" ? "checked" : "") required>
                            <label class="form-check-label" for="EtatAnnule">
                                Annulé
                            </label>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        Veuillez sélectionner un état.
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="ListeReservations" class="btn btn-secondary ml-2">Annuler</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation script
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}


