@model PFA.ModelView.ReserverChambreViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Réserver une table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Réserver une table</h2>

    <form asp-action="Reserver" method="post">
        <div class="form-group">
            <label asp-for="DateReservation" class="control-label"></label>
            <input asp-for="DateReservation" class="form-control" />
            <span asp-validation-for="DateReservation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RoomId" class="control-label">Chambre</label>
            <select asp-for="RoomId" class="form-control" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Numero"))"></select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="HotelId" />
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Réserver</button>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
    </form>
</div>


