@model PFA.ModelView.ClientInscriptionModelView;

@{
    ViewData["Title"] = "Inscription";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">S'inscrire</h2>
                    <form  asp-action="Inscription">
                        <div class="form-group">
                            <label asp-for="Nom" class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Nom" class="form-control" placeholder="Votre Nom" />
                            <span asp-validation-for="Nom" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Prenom" class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="Prenom" class="form-control" placeholder="Votre Prenom" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Telephone" class="control-label" ><i class="zmdi zmdi-account-box-phone "></i></label>
                            <input asp-for="Telephone" class="form-control" type="tel" placeholder="Votre Numero de Telephone" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Email" class="form-control"   placeholder="Votre Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for ="Password" class="control-label"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Password" class="form-control"  id="pass" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="ConfirmPassword" class="form-control"  id="re_pass" placeholder="Repeat your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>

                        <!-- <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div> -->
                        <div class="form-group form-button">
                            <input type="submit" name="signup"   id="signup"  class="form-submit" value="S'inscrire" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/StyleLogin/images/transparente.png" alt="sing up image"></figure>
                </div>
            </div>
        </div>
    </section>
</div>